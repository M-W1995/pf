{% extends 'admin/admin_base.html.twig' %}

{% block body %}

<p class="title">Avis de décès</p>

{% for message in app.flashes('success') %}
    <div class="message is-success">
        <div class="message-body">
            {{ message }}
        </div>
    </div>
{% endfor %}

<table class="table is-fullwidth">
    <thead>
        <th>Nom</th>
        <th>Clé</th>
        <th>Action</th>
    </thead>
    <tbody>
        {% for deces in items %}
            <tr>
                <td>{{ deces.nom }} {{ deces.prenom }} </td>
                <td>{{ deces.cle }}</td>
                <td>
                    <a class="button is-small is-danger" href="{{ path('delete_avis_deces',{id:deces.id}) }}" onclick="return confirm('Confirmer la suppression ?')"><i class="far fa-trash-alt"></i></a> 
                    <a class="button is-small is-primary" href="{{ path('show_avis_deces',{id:deces.id}) }}"><i class="fas fa-eye"></i></a> 
                </td>
            </tr>
        {% else %}
            Aucun résultat trouvé.
        {% endfor %}
    </tbody>
</table>




{% endblock %}


{% block scripts %}
{% endblock %}