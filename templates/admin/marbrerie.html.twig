{% extends 'admin/admin_base.html.twig' %}

{% block body %}

<p class="title">
{% if slug == "plaque" %}
Plaques
{% elseif slug == "traditionnel" %}
Traditionnels
{% elseif slug == "cineraire" %}
Cineraires
{% endif %}
</p>

<div class="box">
<div class="add-one"><b>Ajouter <i class="fas fa-plus"></i></b></div>
<div class="hidden-form">
    {{ form(form) }}
</div>
</div>

<table class="table is-fullwidth">
    <thead>
        <th>Nom</th>
        <th>Photo</th>
        <th>Action</th>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td class="is-vcentered">{{ item.nom }}</td>
                <td><img src="{{asset('uploads/marbrerie/')}}{{ item.photo }}" width="100px"/></td> 
                <td class="is-vcentered">
                    <a href="{{ path('admin.marbrerie.edit',{id: item.id}) }}" class="button is-primary"><i class="far fa-edit"></i></a>
                    <a href="{{ path('admin.marbrerie.delete',{id: item.id}) }}" onclick="return confirm('Confirmer la suppression ?')" class="button is-danger"><i class="far fa-trash-alt"></i></a>
                </td>                
            </tr>
        {% else %}
            <tr>
                <td>Aucun résultat trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}

{% block styles %}
<style>
h2{
    margin-bottom:1em;
}
table{
    margin-top:2em;
}
</style>
{% endblock %}